# Database
DATABASE_URL=postgresql://app:your_secure_password@db:5432/teknik_servis
DB_USER=app
DB_PASSWORD=your_secure_password_here
DB_NAME=teknik_servis
DB_PORT=5432

# Security
SECRET_KEY=your_very_secure_secret_key_here_min_32_chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS - Production domain'lerinizi ekleyin
CORS_ORIGINS_STR=https://yourdomain.com,https://www.yourdomain.com

# File Upload
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760

# Backup
BACKUP_DIR=backups

# Logging
LOG_LEVEL=INFO
ENVIRONMENT=production
DEBUG=false

# API
API_V1_PREFIX=/api/v1

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
